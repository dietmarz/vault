#!/bin/bash


LABEL="WebProCon"
nohup microsoft-edge --new-window https://timetracking.hlg.de/  >/dev/null 2>&1 &
sleep 1
WINDOW_INFO=$(wmctrl -lG | grep -iE "$LABEL")
WINDOW_ID=$(echo "$WINDOW_INFO" | awk '{print $1}')
echo "WINDOW_ID: $WINDOW_ID"
wmctrl -i -r "$WINDOW_ID" -e 0,0,200,1300,1480

LABEL="Sign in|Interflex"
nohup microsoft-edge --new-window https://interflexweb.hlg.de/Webclient/iflx/pinlogin.jsp >/dev/null 2>&1 &
sleep 1
WINDOW_INFO=$(wmctrl -lG | grep -iE "$LABEL")
WINDOW_ID=$(echo "$WINDOW_INFO" | awk '{print $1}')
echo "WINDOW_ID: $WINDOW_ID"
wmctrl -i -r "$WINDOW_ID" -e 0,1270,200,1300,1480
